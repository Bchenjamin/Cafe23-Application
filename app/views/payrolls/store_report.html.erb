<div class="row">
  <div class="col s9">
    <div class="card">    
      <div class="card-content">
        <h1>Payroll for </h1>
        <h2>from <%= @store_payroll.start_date.strftime("%m/%d/%y") %> to <%= @store_payroll.end_date.strftime("%m/%d/%y") %> </h2>

        <% if @store_pay.empty? %>
          <%= "No records found" %>
        <% else %>
          <table class="striped highlight">
            <thead>
                <tr>
                  <th>Employee Name</th>
                  <th>Employee SSN</th>
                  <th>Current Paygrade</th>
                  <th>Current Rate</th>
                  <th>Number of Hours Worked</th>
                  <th>Money Earned</th>
                </tr>
            </thead>
            <% for store in @store_pay %>
              <tr>
                  <td><%= store.employee_name %></td>
                  <td><%= "#{store.employee.ssn[0..2]}-#{store.employee.ssn[3..4]}-#{store.employee.ssn[5..8]}" %></td>
                  <td><%= store.pay_grade %></td>
                  <td><%= store.pay_rate %></td>
                  <td><%= store.hours %></td>
                  <td><%= number_to_currency(store.pay_earned) %></td>
              </tr>
            <% end %>
          </table>
        <% end %>
      </div>
    </div>
  </div>
</div>