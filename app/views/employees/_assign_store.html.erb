<div class="card">
  <div class="card-content">
    <div id="form-template">
    <h5>Employee Store Assignment</h5>
    <!-- now the form template itself -->
    <% if !(@current_assignment.nil?) %>
        <div class="row">
            <div class="col">
            <%= simple_form_for(@current_assignment) do |f| %>
                <%= f.error_notification %>
                <div class="row">
                <div class="form-inputs">
                    <%= f.input :store_id, collection: Store.active.map{|x| [x.name, x.id]}, include_blank: true %>
                </div>
                </div>
                <div class="row">
                <div class="form-actions col">
                    <%= f.button :submit %>
                </div>
                </div>
            <% end %>
            </div>
        </div>
    <% else %>
        <%= link_to "Assign this Employee an Assignment!", new_assignment_path(employee_id: @employee.id), class: "waves-effect waves-light btn" %>
    <% end %>
    </div>
  </div>
</div>