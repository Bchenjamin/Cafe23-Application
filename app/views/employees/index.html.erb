<% if @active_employees.empty? %>
  <h4>There are no employees in the system at this time.</h4>
<% else %>
  <h4>"Active Employees at Cafe23"</h4>
  <table class="striped highlight">
    <thead>
      <th>Name</th>
      <th>Current Assignment</th>
      <th>Phone</th>
      <th class="align_center">Options</th>
    </thead>
    <% for employee in @active_employees %>
      <tr>
        <td><%= link_to "#{employee.name}", employee_path(employee) %></td>
        <td><%= employee.current_assignment %></td>
        <td><%= number_to_phone employee.phone %></td>
        <td class="align_center">
          <%= link_to edit_employee_path(employee) do %>
              <i class="material-icons">edit</i>
          <% end %>
          &nbsp;&nbsp;&nbsp;&nbsp; 
          <%= link_to(store_path(employee), method: :delete, data: { confirm: 'Are you sure you wish to delete this information?' }) do %>
              <i class="material-icons">delete</i>
          <% end %>
        </td>
      </tr>
    <% end %>
  </table>
  <br />
  <%# <%= will_paginate @active_stores, previous_label: "Previous&nbsp;", next_label: "&nbsp;Next" %> %>
  
  <h4>"Inactive Employees"</h4>
<% end %>
<p>&nbsp;</p>

