<div class="card">
  <div class="card-content">
    <h5>Information for <%= @employee.name %> </h5><br />

    <b>Username:&nbsp;&nbsp;</b>
      <%= @employee.username %><br /><br />

    <b>Date of Birth:&nbsp;&nbsp;</b>
      <%= @employee.date_of_birth %><br /><br />
    
    <b>SSN:&nbsp;&nbsp;</b>
      <%= "#{@employee.ssn[0..2]}-#{@employee.ssn[3..4]}-#{@employee.ssn[5..8]}" %><br /><br />

    <b>Phone:&nbsp;&nbsp;</b>
      <%= number_to_phone @employee.phone %><br /><br />

    <b>Employee Role:&nbsp;&nbsp;</b>
      <%= @employee.role.capitalize %><br /><br />

    <b>Currently Assigned Store:&nbsp;&nbsp;</b>
      <% if @current_assignment.nil? %>
        <% "N/A" %>
      <% else %>
        <%= @current_assignment.store.name %>
      <% end %><br /><br />

    <% if !(@other_assignments.nil?) %>
      <b>Past Assignments:&nbsp;&nbsp;</b> <br /><br />
        <% for asgn in @other_assignments %>
            <%= asgn.store.name %>
            <%= "(#{asgn.start_date.strftime("%m/%d/%y")} - #{asgn.end_date.strftime("%m/%d/%y")}) as #{asgn.employee.role.capitalize}" %>
            <br /><br />
        <% end %>
    <% end %>

    <b>Active in Cafe23?&nbsp;&nbsp;</b>
      <% if @employee.active %>
             <i class="material-icons" %>check</i> 
          <% else %>
             <i class="material-icons" %>clear</i> 
          <% end %>
    <br><br><br> 
  </div>
</div>
