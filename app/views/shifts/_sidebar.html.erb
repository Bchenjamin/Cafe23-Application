<div class="card">
  <div class="card-content">
    <span class="card-title">Associated Jobs</span>
    <table class="striped highlight">
      <b>Jobs:&nbsp;&nbsp;</b>
      <% jobs = @shift.jobs %>
      <% if jobs.empty? %>
        <%= "N/A" %>
      <% else %>
        <%= jobs.map{|x| x.name}.join(", ") %>
      <% end %>
      <br /><br />
      <% if @shift.status == 'finished' %>
        <%= link_to "Assign a Job", new_shift_job_path, class: "waves-effect waves-light btn" %>
      <% end %>
    </table>
  </div>
</div>


