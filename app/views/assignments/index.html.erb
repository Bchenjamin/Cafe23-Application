<% if @current_assignments.empty? %>
  <h4>There are no assignments in the system at this time.</h4>
<% else %>
  <h4>Current Assignments</h4>
  <table class="striped highlight">
    <thead>
      <th>Start Date</th>
      <th>Store</th>
      <th>Employee</th>
      <th>Pay Grade</th>
      <th>Shift Count</th>
    </thead>
    <% for assignment in @current_assignments %>
      <tr>
        <td><%= assignment.start_date.strftime("%m/%d/%y") %></td>
        <td><%= assignment.store.name %></td>
        <td><%= assignment.employee.proper_name %></td>
        <td><%= assignment.pay_grade.level %></td>
        <td><%= assignment.shifts.size %></td>
      </tr>
    <% end %>
  </table>
  <br />
  <%# <%= will_paginate @active_stores, previous_label: "Previous&nbsp;", next_label: "&nbsp;Next" %> 
  
<% end %>
<p>&nbsp;</p>

