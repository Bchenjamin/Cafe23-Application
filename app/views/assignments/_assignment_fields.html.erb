<%= f.input :store_id, collection: Store.alphabetical.active.map{|x| [x.name, x.id]} %>
<% if params[:employee_id] %>
  <%= f.input :employee_id, collection: Employee.alphabetical.active.map{|x| [x.name, x.id]}, selected: params[:employee_id] %>
<% else%>
  <%= f.input :employee_id, collection: Employee.alphabetical.active.map{|x| [x.name, x.id]} %>
<% end %>
<%= f.input :pay_grade_id, collection: PayGrade.alphabetical.active.map{|x| [x.level, x.id]} %>
<%= f.input :start_date, label_html: { class: 'active' } %>
<%= f.input :end_date, label_html: { class: 'active' } %>
